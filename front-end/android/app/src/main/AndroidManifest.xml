<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.edu.agh.fis">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity_"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.user.CreateUserActivity_"
            android:label="Android" />
        <activity
            android:name=".activity.main.MainActivity_"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".activity.document.details.DetailsDocumentActivity_"
            android:label="@string/title_activity_create_document"></activity>
        <activity
            android:name=".activity.document.chapter.list.ChapterListActivity_"
            android:label="@string/title_activity_chapter_list"></activity>
        <activity
            android:name=".activity.document.paragraph.list.ParagraphListActivity_"
            android:label="@string/title_activity_paragraph_document"></activity>
        <activity
            android:name=".activity.document.paragraph.details.ParagraphDetailsActivity_"
            android:label="@string/title_activity_paragraph_document"></activity>
        <activity
            android:name=".activity.application.template.ApplicationTemplateDetailsActivity_"
            android:label="@string/title_activity_paragraph_document"></activity>
        ApplicationTemplateDetailsActivity
    </application>

</manifest>