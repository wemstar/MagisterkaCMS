<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml" />

    <springProfile name="default">
        <property scope="context" name="logstash-adres" value="192.168.99.101" />
    </springProfile>

    <springProfile name="docker">
        <property scope="context" name="logstash-adres" value="logstash" />
    </springProfile>

    <springProperty scope="context" name="appname" source="spring.application.name"/>
    <!-- Methode 2 -->
    <appender name="JSON" class="ch.qos.logback.core.FileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <file>${LOG_FILE}.json</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeCallerInfo>true</includeCallerInfo>
            <customFields>{"appname":"${appname}"}</customFields>
        </encoder>
    </appender>O
    <!-- Methode 3 -->

    <appender name="TCP" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>${logstash-adres}:5044</destination>
        <!-- encoder is required -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeCallerInfo>true</includeCallerInfo>
            <customFields>{"appname":"config-server"}</customFields>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <!-- Methode 1-->
        <appender-ref ref="FILE" />
        <!-- Methode 2 -->
        <appender-ref ref="JSON" />
        <!-- Methode 3-->
        <appender-ref ref="TCP" />
    </root>
    <logger name="org.springframework" level="INFO"/>
</configuration>